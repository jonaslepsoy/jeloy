extends layout

block content
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Capture the flag @ Jel√∏ya Radio
        form.navbar-form.navbar-left(id='capform')
          .form-group
            select(id="cap")
              option(value="Storo Parkeringshus") Storo
              option(value="Lima") Lima
              option(value="Vika P-hus") Vika
              option(value="Shanghai") Shanghai
            button.btn.btn-default.hidden(id="capbutton" onclick="event.preventDefault();window.cap(this)") Cap
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Controls
                span.caret
                  ul.dropdown-menu
                    li
                      a(href="#") Start game
                    li
                      a(href="#") Stop game
                    li
                      a(href="#" onclick="window.reset()") Reset game
    .container-fluid
      .row.score.text-center
        .col-xs-3 Storo
          span#StoroParkeringshus
        .col-xs-3 Lima
          span#Lima
        .col-xs-3 Vika
          span#VikaP-hus
        .col-xs-3 Shanghai
          span#Shanghai
      .row
        .col-xs-12.main
          button(onclick="join()") Join a team
          span.col-xs-1#rolelabel
          .row.players
            .col-xs-6
              h2.primary(id="blueheader")
              #blue
            .col-xs-6
              h2.danger(id="redheader")
              #red
