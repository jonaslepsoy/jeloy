extends layout

block content
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Capture the flag @ Jel√∏ya Radio
        form.navbar-form.navbar-left(id='capform')
          .form-group
            select(id="cap")
              option(value="Buenos Aires") Buenos Aires
              option(value="Lima") Lima
              option(value="Santiago") Santiago
              option(value="Shanghai") Shanghai
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Controls
                span.caret
                  ul.dropdown-menu
                    li
                      a(href="#") Start game
                    li
                      a(href="#") Stop game
                    li
                      a(href="#" onclick="window.reset()") Reset game
    .container-fluid
      .row
        .col-xs-12.main
          button(onclick="join()") Join a team
          h1.page-header Dashboard
          .row.players
            .col-xs-6
              h2.primary Blue team
              #blue
            .col-xs-6
              h2.danger Red team
              #red
